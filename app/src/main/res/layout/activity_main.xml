<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--  ========================  STATUS BAR  =========================  -->
    <include
        android:id="@+id/home_status_bar"
        layout="@layout/view_status_bar" />

    <!-- ========================  MAIN VIEWPAGER ======================== -->
    <hedgehog.tech.ilauncher.customview.ilauncher.intercept.CustomViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:layout_marginTop="@dimen/_26sdp"
            />

    <!-- ========================  HELP LAYOUT ======================== -->
    <include
        android:id="@+id/main_help_layout"
        layout="@layout/layout_help"/>

    <!-- ========================  TOP SHEET  ===========================  -->
    <include
        android:id="@+id/main_home_top_sheet"
        layout="@layout/fragment_notification"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

